datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  level     String    @default("HENCHMAN")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
  events    Event[]   @relation("Event_organiser")
}

model Event {
  id          String  @id @default(cuid())
  name        String  @default("")
  organiser   User?   @relation("Event_organiser", fields: [organiserId], references: [id])
  organiserId String? @map("organiser")
  venueName   String  @default("")
  date        String
  cost        Float?
  howToPay    String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")

  @@index([organiserId])
  @@index([date])
}
